<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    	<!-- Action -->

    	<record id="action_push" model="ir.actions.server">
    		<field name="name">Action Push</field>
    		<field name="model_id" model="ir.model"
								   search="[('model', 'in', ['product.product'])]" />
    		<field name="state">code</field>
    		<field name="code">self.pool.get('hub.client').push(cr, uid, obj, context)</field>
    	</record>

    	<!-- Rule -->

        <record id="rule_push" model="base.action.rule">
            <field name="name">Rule Push</field>
            <field name="model_id" model="ir.model"
			                       search="[('model', 'in', ['product.product'])]" />
            <field name="active" eval="True" />
            <field name="server_action_ids" eval="[(6, 0, [ref('action_push')])]" />
        </record>

    </data>
</openerp>

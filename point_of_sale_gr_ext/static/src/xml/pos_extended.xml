<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->

<templates id="template" xml:space="preserve">

    <t t-extend="PosWidget">
        <t t-jquery=".placeholder-UsernameWidget" t-operation="before">
            <span class="placeholder-NotesWidget"></span>
        </t>
    </t>

    <t t-extend="OnscreenKeyboardFull">
        <t t-jquery=".close_button" t-operation="after">
            <p class="done_button">done</p>
        </t>
    </t>

    <t t-extend="OnscreenKeyboardSimple">
        <t t-jquery=".close_button" t-operation="after">
            <p class="done_button">done</p>
        </t>
    </t>

    <t t-name="NotesWidget">
        <span class="notes">
            Add Customer
        </span>
    </t>

    <t t-name="NotesPopupWidget">
        <div class="wrap">
          <form id="form-sign-up" class="styled" action="" method="post">
	  	    <fieldset>
			  <div class="modal-header">
                <h3>Customer Preferences Note</h3>
              </div>
              <br/>
			  <ol>
			    <li class="form-row"><label>Name:</label>
				  <input name="name" type="text" placeholder="Name" id="name" class="text-input required name" autocomplete="off" />
				</li>
				<li class="form-row"><label>Email:</label>
				  <input name="email" type="text" id="email" placeholder="Email" class="text-input required email" />
				</li>
				<li class="form-row"><label>Phone:</label>
				  <input name="phone" type="text" id="phone" placeholder="Phone Number"  class="text-input required phone"/>
				</li>
				<li class="form-row"><label>Note:</label>
                    <textarea id="note"  class="text-input required"/>
				</li>
			  </ol>
                <div class="modal-footer">
                    <a href="#" id="pop_cancel_button" class="btn">Cancel</a>
                    <a href="#" id="pop_ok_button" class="btn btn-primary">Accept</a>
                </div>
			</fieldset>
		  </form>
	    </div>
    </t>

    <t t-name="SuccessActionPopUpWidget">
        <div class="wrap">
          <form id="form-sign-up" class="styled" action="" method="post">
	  	    <fieldset>
			  <div class="modal-header">
                <h3>Information</h3>
              </div>
              <br/>
			  <ol>
			    <li class="form-row">
				  <p class="message">Succes! You have updated the customers.</p>
				</li>
              </ol>
              <div class="modal-footer">
                <a href="#" id="pop_cancel_button1" class="btn">Close</a>
              </div>
			</fieldset>
		  </form>
	    </div>
    </t>
	
	<t t-name="Paymentline">
        <div t-attf-class="paymentline #{line.selected ? 'selected' : ''}">
            <div class='paymentline-name'>
                <t t-esc="line.name"/>
            </div>
            <select class='paymentline-input' t-if="line.cashregister.journal.type !== 'cash'" >
            	<option t-attr-value="credit">Credit</option>
				<option t-attr-value="debit">Debit</option>
			</select>
			<span class="oe_radio_input" t-if="line.cashregister.journal.type !== 'cash'" >
				<input t-att-name="card-type" t-att-value="visa" type="radio">
					<img src="/point_of_sale_gr_ext/static/src/img/visa.png" style="margin-top: 10px; margin-right: 5px;" />
				</input>
				<input t-att-name="card-type" t-att-value="mastercard" type="radio">
					<img src="/point_of_sale_gr_ext/static/src/img/master.png" style="margin-top: 10px; margin-right: 5px;"/>
				</input>
				<input t-att-name="card-type" t-att-value="discover" type="radio" >
					<img src="/point_of_sale_gr_ext/static/src/img/discover.png" style="margin-top: 10px; margin-right: 5px;"/>
				</input>
				<input t-att-name="card-type" t-att-value="american" type="radio" >
					<img src="/point_of_sale_gr_ext/static/src/img/american_express.png" style="margin-top: 10px; margin-right: 5px;"/>
				</input>
			</span>
			<input class='paymentline-input' type="number" step="0.01" t-att-value="line.get_amount().toFixed(2)" />
            <span  class='paymentline-delete'>
                <img src="/point_of_sale/static/src/img/search_reset.gif" />
            </span>
        </div>
    </t>

</templates>



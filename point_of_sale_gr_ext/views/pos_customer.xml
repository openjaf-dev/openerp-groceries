<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

       <record id="view_pos_customer_tree" model="ir.ui.view">
            <field name="name">pos.customer.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <field name="email" position="after">
                    <field name="last_note" />
                </field>
            </field>
        </record>

        <record id="pos_note_view_partner_form" model="ir.ui.view">
            <field name="name">pos.note.partner.form.inherit</field>
            <field name="model">pos.note</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="comment"/>
            </field>
        </record>

        <record id="pos_customer_view_partner_form" model="ir.ui.view">
            <field name="name">pos.customers.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='comment']" position="replace">
                    <field name="notes"/>
                </xpath>
            </field>
        </record>

        <record id="pos_customers_action" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <record id="pos_credit_cards_conf_form_view" model="ir.ui.view">
            <field name="name">pos.credit.cards.conf.form</field>
            <field name="model">pos.credit.cards.conf</field>
            <field name="arch" type="xml">
                <form string="Cards" version="8.0">
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar oe_left"/>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name" name='label_name' string="Card Name"/>
                            </div>
                             <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                            <br/>
                            <div name="options" groups="base.group_user">
                                <field name="ready_2_use"/>
                                <label for="ready_2_use"/>
                            </div>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_journal_pos_gr_ext_user_form">
            <field name="name">POS Journal</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Credit Cards" attrs="{'invisible': [('type','=','cash')]}">
                        <group col="4" colspan="4">
                            <field name="credit_cards"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_pos_card_config_tree" model="ir.ui.view">
            <field name="name">pos.card.config.tree</field>
            <field name="model">pos.credit.cards.conf</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="name" />
                <field name="ready_2_use" />
                <field name="image" />
            </field>
        </record>

        <menuitem name="Customers" id="menu_point_of_sale_customers" parent="point_of_sale.menu_point_root" sequence="17" />

        <menuitem
            action="pos_customers_action"
            id="menu_pos_customers"
            parent="menu_point_of_sale_customers" sequence="1"/>

        <record id="action_credit_cards_conf_form" model="ir.actions.act_window">
            <field name="name">Credit Cards</field>
            <field name="res_model">pos.credit.cards.conf</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new credit card.
              </p>
            </field>
        </record>

        <menuitem action="action_credit_cards_conf_form"
            id="menu_action_credit_cards_conf_form_open"
            parent="point_of_sale.menu_point_config_product"
            sequence="21"/>

    </data>
</openerp>

<?xml version="1.0"?>
<openerp>
    <data>
    <!-- Declaracion del formulario para wizard--> 
    <record model="ir.ui.view" id="view_groceries_import_wizard">
        <field name="name">groceries.import.process.wizard.view</field>
        <field name="model">groceries.import.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Product Categories File To Import">
                <group col="7">
                    <group colspan="1">
                        <field name="config_logo" widget="image" width="220" height="130" nolabel="1" colspan="1"/>
                        <newline/>
                        <label string="Breve descripcion del paso en el que se encuentra el usuario."/>
                    </group>
                    <separator rowspan="15" orientation="vertical"/>

	                <group colspan="5" col="5">
	                    <separator string="Select a Product Category file to import." colspan='5'/>
	                    <newline />
	                    <field name="product_category_file" required="True"/>
	                    
	                </group>
                </group>
                
                <group colspan="7" col="7">
                    <separator string="" colspan="7" />
                    <label string="" colspan="1" />
                    <button icon="gtk-apply" name="check_product_category_step1" string="Next" type="object"/>
                    <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Declaracion de la accion-->
    <record id="action_groceries_import_wizard" model="ir.actions.act_window">
        <field name="name">Groceries Import Process Step 1. Select Product Categories File</field>
        <field name="res_model">groceries.import.wizard</field>
        <field name="view_id" ref="view_groceries_import_wizard"/>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</openerp>

<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!-- Page -->


<template id="users_index" name="Partners">
    <t t-call="website.layout">
        <section class="container">
            <div class="col-sm-12 text-center" t-if="len(resusers_ids)">
                <h2>Users</h2>
                <a  t-attf-href="/web/signup" class="btn btn-primary" groups="base.group_erp_manager">Sign up</a>
                
            </div>
            <div t-foreach="resusers_ids" t-as="resuser" class="col-sm-3 col-lg-2 mt16 text-center colsize">
                <!-- <t t-call="website.publish_management"><t t-set="object" t-value="product"/></t> -->
                <div class="clearfix"/>
                <!-- <img t-att-src="product.img('image_medium')" class="img shadow img-rounded"/> -->                
                <img t-att-src="resuser.image" class="img shadow img-rounded"/>
                <div class="mt8">
                    <a t-attf-href="/user/#{ slug(resuser.id)}">
                        <strong t-field="resuser.name"></strong>
                    </a>
                </div>

                <!-- <div t-field="product.job_id"/> -->
                <!-- <div t-field="product.public_info" class="text-muted mt16"/> -->
            </div>
        </section>
    </t>
</template>

<template id="auth_signup.login" inherit_id="web.login" name="Sign up - Reset Password">
    <xpath expr="//button[@type='submit']" position="before">
    </xpath>
</template>


<template id="user_show" name="User">
  <t t-call="website.layout">
        <section class="container" id="user_detailsss">
          <div class="row">
            <div class="col-sm-5 col-md-5 col-lg-4 col-lg-offset-1">
                <h2 itemprop="name" t-field="user.name"/>                               
            </div>
          </div>
          <a t-attf-href="/user/#{ slug(user)}/delete" class="btn btn-primary" groups="base.group_erp_manager">Delete</a>            
        </section>
  </t>
</template>

<template id="auth_signup.signup" name="Sign up login">
    <t t-call="web.login_layout">
        <form class="oe_signup_form" role="form" t-attf-action="/web/signup{{ '?debug' if debug else '' }}" method="post" t-if="not message">

            <t t-call="auth_signup.fields"/>

          Roles
                <select name="db" id="db" class="form-control" required="required" t-att-autofocus="'autofocus'" >
                    <option></option>      <option>1</option>      <option>2</option>
          <!--          <t t-foreach="databases" t-as="db">
                        <option t-att-selected="'selected' if db == current_db else None">
                            <t t-esc="db"/>
                        </option>
                    </t>   -->
                </select>         
          

            <p class="alert alert-danger" t-if="error">
                <t t-esc="error"/>
            </p>
            <input type="hidden" name="redirect" t-att-value="redirect"/>
            <input type="hidden" name="token" t-att-value="token"/>
            <div class="clearfix oe_login_buttons">
                <button type="submit" class="btn btn-primary pull-left">Sign up</button>
            </div>

        </form>
    </t>
</template>



 </data>
</openerp>
